{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@budget-insights/home": ["libs/home/src/index.ts"],
      "@budget-insights/shared": ["libs/shared/src/index.ts"],
      "@budget-insights/shell": ["libs/shell/src/index.ts"],
      "@budget-insights/workbook": ["libs/workbook/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
